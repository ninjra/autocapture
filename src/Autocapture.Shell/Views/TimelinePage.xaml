<Page x:Class="Autocapture.Shell.Views.TimelinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:design="clr-namespace:Autocapture.Shell.ViewModels.DesignTime"
      mc:Ignorable="d"
      Background="#0E1116"
      d:DataContext="{d:DesignInstance Type=design:DesignTimelineViewModel, IsDesignTimeCreatable=True}">
  <Grid Margin="32">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <StackPanel>
      <TextBlock Text="Timeline" FontSize="28" FontWeight="SemiBold" Foreground="#E7EAF0" />
      <TextBlock Text="Recent context snapshots" FontSize="14" Foreground="#A9B1BC" Margin="0,6,0,0" />
    </StackPanel>

    <ScrollViewer Grid.Row="1" Margin="0,24,0,0" VerticalScrollBarVisibility="Auto">
      <ItemsControl ItemsSource="{Binding Items}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Background="#151A21" BorderBrush="#242B36" BorderThickness="1"
                    CornerRadius="16" Padding="20" Margin="0,0,0,16">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="80" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding TimeLabel}" Foreground="#8FA0B3" FontWeight="SemiBold" />
                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                  <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" Foreground="#EEF1F6" />
                  <TextBlock Text="{Binding Summary}" TextWrapping="Wrap" Foreground="#C1C8D1" Margin="0,6,0,0" />
                  <Border Background="#1B2230" CornerRadius="10" Padding="8" Margin="0,10,0,0">
                    <TextBlock Text="{Binding Context}" Foreground="#9FB6D2" FontSize="12" />
                  </Border>
                </StackPanel>
              </Grid>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </Grid>
</Page>
